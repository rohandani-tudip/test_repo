<marquee>Stay Home and Stay Safe</marquee>
<h1>Covid-19 Patients Details</h1>
<p>
<%= link_to 'New Details', new_patient_path %></p>
 
<table border = "2px">
  <tr>
    <th>Name</th>
    <th>Adress</th>
    <th>Test_Date</th>
    <th>Test_Result</th>
    <th>
    <th colspan="2"></th>
    
  </tr>
 
  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.text %></td>
      <td><%= patient.test_date %></td>
      <td><%= patient.test_result %></td>
      <td><%= link_to 'Show', patient_path(patient) %></td>
      <td><%= link_to 'Edit', patient_path(patient) %></td>
      <td><%= link_to 'Destroy', patient_path(patient),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
